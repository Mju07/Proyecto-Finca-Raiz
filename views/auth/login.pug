extends ../layout/index

block content
    .py-5 
        h1.text-center.text-4xl.my-5.font-extrabold.text-black Bien
            span.font-normal Raiz 
        h2.text-center.text-3xl.font-extrabold.text-black= pagina

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-black.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-indigo-100.py-8.px-4.shadow.rounded-lg
                form.space-y-5(method="POST" noValidate)
                    input(name="_csrf" value=csrfToken type="hidden")
                    div
                        label.block.text-sm.uppercase.text-neutral-950.mb-1.font-bold(for="email") Correo Electrónico
                        input#email.w-full.py-2.px-3.placeholder-gray-400.bg-white.rounded-lg( placeholder="Ingresa tu Correo Electrónico" name="email" type="email" value=user ? user.email : '')
                    div
                        label.block.text-sm.uppercase.text-neutral-950.mb-1.font-bold.rounded-lg(for="password") Contraseña
                        input#password.w-full.py-2.px-3.placeholder-gray-400.bg-white.rounded-lg(placeholder="Ingresa tu Contraseña" name="password" type="password")
                    input.w-full.bg-indigo-400.text-black.font-bold.py-3.cursor-pointer.uppercase.text-sm.rounded-md(type="submit" value="Iniciar Sesión")
                    .flex.items-center.justify-between.mt-5
                        a.text-neutral-950.text-xs(href="/auth/registro") ¿No tienes una cuenta todavía? Crear Cuenta
                        a.text-neutral-950.text-xs(href="/auth/olvide-password") ¿Olvidaste tu contraseña?
